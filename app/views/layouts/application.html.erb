<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <li>
            <%= link_to 'Bookers', root_path %>
          </li>

          <% if user_signed_in? %>
            <li>
              <%= link_to 'Home', user_path(current_user) %>
          　</li>
            <li>
              <%= link_to 'Users', users_path %> <!-- Usersリンク -->
            </li>
            <li>
              <%= link_to 'Books', books_path %> <!-- Booksリンク -->
            </li>
            <li>
              <%= link_to 'Log out', destroy_user_session_path, method: :delete %> <!-- Log outリンク -->
            </li>
          <% else %>
            <li>
              <%= link_to 'Home', root_path %>
            </li>
            <li>
              <%= link_to 'About', about_path %> <!-- Aboutリンク -->
            </li>
            <li>
              <%= link_to 'Sign up', new_user_registration_path %> <!-- Sign upリンク -->
            </li>
            <li>
              <%= link_to 'Log in', new_user_session_path %> <!-- Log inリンク -->
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
  <footer>
    <p>CopyRight Infratop.inc</p>
  </footer>
</html>
