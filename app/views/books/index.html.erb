<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/self', book: @book %>
    </div>

    <div class="col-md-1">
      <!-- ここが空白のスペースになります -->
    </div>

    <div class="col-md-8">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody style="background-color: #ffffff;">
          <% @books.each do |book| %>
            <tr style="background-color: #ffffff;">
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.book_name %>
                <% end %>
              </td>
              <td><%= book.caption %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


