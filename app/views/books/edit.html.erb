<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h1>Editing Book</h1>
      
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with model: @book, url: book_path(@book), method: :patch, local: true, id: "update-book-form" do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-sm btn-success", data: { disable_with: "Update Book" } %>
        </div>
      <% end %>
      <%= link_to 'Show', book_path(@book) %>
       |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>