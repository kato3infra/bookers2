
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/self', book: @book %>
    </div>

    <div class="col-md-1">
      <!-- ここが空白のスペースになります -->
    </div>

    <div class="col-md-8">
      <h1>Book detail</h1>
      <table class="table table-striped">
        <tbody style="background-color: #ffffff;">
          <tr style="background-color: #ffffff;">
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.book_name %>
              <% end %>
            </td>
            <td><%= @book.caption %></td>
            <td>
              <% if @book.user == current_user %>
                <a class="btn btn-sm btn-success edit_book_<%= @book.id %>" href="<%= edit_book_path(@book) %>">Edit</a>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <a data-confirm="本当に削除しますか？" class="btn btn-sm btn-danger destroy_book_<%= @book.id %>" rel="nofollow" data-method="delete" href="<%= book_path(@book) %>">Destroy</a>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>