<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Users info</h2>
    
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with model: @user, local: true do |f| %>
    
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
    
      <div class="form-group">
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :profile_image, "Profile Image" %><br>
        <%= f.file_field :profile_image, class: "form-control-file" %>
        <%= image_tag @user.get_profile_image(100, 100), class: "mt-3" if @user.profile_image.attached? %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "Introduction" %><br>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary", data: { disable_with: "Update Profile" } %>
      </div>
    <% end %>
    </div>
  </div>
</div>

