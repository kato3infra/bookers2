<h3>User info</h3>

<!-- @user が nil でないことを確認しつつ画像を表示 -->
<%= image_tag(user.get_profile_image(100, 100) || 'default_image.png') if user %>

<table class="table">
  <tr>
    <th>Name</th>
    <td><%= user&.name || '' %></td>
  </tr>
  <tr>
    <th>Introduction</th>
    <td><%= user&.introduction || '' %></td>
  </tr>  
</table>


  <div class="row">
    <a class="btn btn-outline-secondary btn-block edit_user_<%= user.id %> mt-3" href="<%= edit_user_path(user) %>">
      <i class="fa-solid fa-user-gear"></i>
    </a>
  </div>




  <h2 class="mt-3">New book</h2>

  <!-- フラッシュメッセージの表示 -->
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <!-- book が存在し、エラーがある場合のエラーメッセージの表示 -->
  <% if book && book.errors.any? %>
    <div class="alert alert-danger">
      <h4>There were errors with your submission:</h4>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- フォームの表示 -->
  <%= form_with model: book, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body, "Opinion" %>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Book", class: "btn btn-success", data: { disable_with: "Create Book" } %>
    </div>
  <% end %>