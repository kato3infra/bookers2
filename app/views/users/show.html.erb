<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/self', book: @book %>
    </div>

    <div class="col-md-1">
      <!-- ここが空白のスペースになります -->
    </div>

    <div class="col-md-8">
      <h1>Books1</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody style="background-color: #ffffff;">
          <% @user.books.each do |book| %>
            <tr style="background-color: #ffffff;">
              <td><%= image_tag book.get_image %></td>
              <td><%= book.book_name %></td>
              <td><%= book.caption %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

